  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8888",
      "webRoot": "${workspaceFolder}",
      "skipFiles": ["node_modules/**"],
      "sourceMaps": true,
      "disableNetworkCache": true,
      "breakOnLoad": true,
      "sourceMapPathOverrides": {
        "webpack:///Test/./*": "${webRoot}/*",
        "webpack://Test/./src/*": "${webRoot}/src/*",
        "webpack://Test/./node_modules/*": "${webRoot}/node_modules/*",
        "meteor://💻app/*": "${webRoot}/*"
      }
    }
  ]
}